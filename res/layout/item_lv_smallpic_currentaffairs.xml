<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0064c8" >


    <RelativeLayout
        android:id="@+id/relativeItem3"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/tvNewsTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/ivNewsPic2"
            android:maxLines="4"
            android:padding="0dp"
            android:ellipsize="end"
            android:text="这是一条很长很长很长很长很长很长很长很长很长很长很长很长很长很的新闻标题"
            android:textColor="@color/homepage_newslist_title_color_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvNewsUpdateTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNewsTitle2"
            android:layout_alignLeft="@+id/tvNewsTitle2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:text=""
            android:textColor="@color/homepage_newslist_title_color_gray"
            android:textSize="9sp" />
 
        <ImageView
            android:id="@+id/ivNewsPic2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/sample_image_list_homepage2" />
    </RelativeLayout>

</RelativeLayout>