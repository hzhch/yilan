<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0064c8" >


    <RelativeLayout
        android:id="@+id/relativeItem3"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/tvTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:maxLines="4"
            android:padding="0dp"
            android:text="这是一条很长很长很很长很长很长很长很长很长很长很长很长很的新闻标题"
            android:textColor="@color/homepage_newslist_title_color_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvNewsUpdateTime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle3"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:text="5分钟前"
            android:textColor="@color/homepage_newslist_title_color_gray"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/ivGrayLine2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/line_gray" />
    </RelativeLayout>

</RelativeLayout>